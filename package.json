{
  "name": "backend-starter",
  "version": "1.0.0",
  "description": "Backend starter for TS, Graphql, and PG, with auth users",
  "author": "Kevin Grant <kevingrant5@gmail.com>",
  "scripts": {
    "start": "node dist/main.js",
    "build": "tsc --outDir dist",
    "develop": "nodemon",
    "tsc": "tsc",
    "knex": "ts-node ./node_modules/.bin/knex",
    "createMigration": "knex migrate:make",
    "migrate": "knex migrate:latest",
    "migrate:prod": "heroku run yarn migrate",
    "rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "seed:prod": "heroku run yarn seed",
    "logs": "heroku logs --tail",
    "gql": "graphql-codegen --config codegen.yml",
    "testEmail": "ts-node src/scripts/testEmail.ts"
  },
  "dependencies": {
    "apollo-server": "^2.11.0",
    "apollo-server-express": "^2.11.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "connection-string": "^3.2.0",
    "core-js": "^3.6.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^14.6.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.19.4",
    "knex-stringcase": "^1.3.0",
    "lodash": "^4.17.15",
    "morgan": "^1.9.1",
    "pg": "^7.18.2",
    "pg-copy-streams": "^2.2.2",
    "striptags": "^3.1.1",
    "supertest": "^4.0.2",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.13.1",
    "@graphql-codegen/introspection": "1.13.1",
    "@graphql-codegen/typescript": "1.13.1",
    "@graphql-codegen/typescript-document-nodes": "1.13.1",
    "@graphql-codegen/typescript-resolvers": "1.13.1",
    "@sendgrid/mail": "^6.5.4",
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.3",
    "@types/jest": "^25.1.4",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/lodash": "^4.14.149",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.9.1",
    "@types/pg-copy-streams": "^1.2.1",
    "@types/supertest": "^2.0.8",
    "graphql-toolkit": "^0.7.5",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "prettier-tslint": "^0.4.2",
    "ts-jest": "^25.2.1",
    "tslint": "^6.1.0"
  }
}
